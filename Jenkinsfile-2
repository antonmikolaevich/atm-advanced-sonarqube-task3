pipeline {//for jenkins -docker integration build image for the beginning
    agent any
    stages {
    stage ("Build Docker Image"){
        steps {
            script {
            bat "docker build --tag jenkinsdocker01 ."
        }
        }
    }
    stage ("Run Docker Image"){
        steps {
            script {
            //bat "docker run jenkinsdocker01"
            bat "docker run -it -v D:/Automation Program Global - Advanced/Homework 7 - CI-CD/demo-reportportal-api-project:/api-project --name jenkinsdocker01"
            junit (allowEmptyResults: true, testResults: 'D:/Automation Program Global - Advanced/Homework 7 - CI-CD/demo-reportportal-api-project/*.xml')
        }
        }
    }
    }
    post {
        always {
            junit (allowEmptyResults: true, testResults: '*.xml')
        }
    }
}