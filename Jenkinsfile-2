pipeline {//for jenkins -docker integration build image for the beginning
    agent any
    stages {
    stage ("Build Docker Image"){
        steps {
            script {
            bat 'docker build --tag jenkinsdocker01 .'    
            bat "docker run --name temp-cont jenkisdocker01"
            bat "docker cp temp-cont:/api-project ."
            bat 'docker rm temp-cont'
            junit (allowEmptyResults: true, testResults: '*.xml')
        }
        }
    }
    // stage ("Run Docker Image"){
    //     steps {
    //         script {
    //         //bat "docker run jenkinsdocker01"
    //         bat "docker run -d --name=jenkinsdocker01 -v nginx-vol:/usr/share/nginx/html:ro"
    //         junit (allowEmptyResults: true, testResults: '*.xml')
    //     }
    //     }
    // }
    }
    post {
        always {
            junit (allowEmptyResults: true, testResults: '*.xml')
        }
    }
}