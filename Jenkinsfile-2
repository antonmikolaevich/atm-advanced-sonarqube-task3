pipeline {//for jenkins -docker integration build image for the beginning
    agent any
    stages {
    stage ("Build Docker Image"){
        steps {
            script {
            bat "docker build --tag jenkinsdocker01 ."
        }
        }
    }
    stage ("Run Docker Image"){
        steps {
            script {
            bat "docker run  --name test-container jenkinsdocker01"
            junit allowEmptyResults: true, testResults: '.xml'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: '', reportFiles: 'report.html', reportName: 'HTML Report', reportTitles: 'The report', useWrapperFileDirectly: true])
        }
        }
    }
    }
}