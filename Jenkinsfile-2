pipeline {//for jenkins -docker integration build image for the beginning
    agent any
    stages {
    stage ("Build Docker Image"){
        steps {
            script {
            bat "docker build --tag jenkinsdocker01 ."
        }
        }
    }
    stage ("Run Docker Image"){
        steps {
            script {
            bat "docker run  --name test-container jenkinsdocker01"
            junit "reports/report.xml"
        }
        }
    }
    stage ("Stop Container"){
        steps {
            script {
            bat "docker stop test-container"
        }
        }
    }
    stage ("Delete Container"){
        steps {
            script {
            bat "docker rm test-container"
        }
        }
    }
    }
}